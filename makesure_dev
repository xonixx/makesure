#!/bin/sh

mydir=$(
  cd "$(dirname "$0")"
  pwd
)

export AWK="${AWK:-awk}"

if awk 'BEGIN { exit index(ENVIRON["AWK"],"gawk")>0 ? 0 : 1 }'
then
  exec $AWK -v "Version=$NEXT_VERSION" -v "Prog=$0" -v Gawk=1 -l time -f "$mydir/makesure.awk" Makesurefile "$@"
else
  exec $AWK -v "Version=$NEXT_VERSION" -v "Prog=$0" -f "$mydir/mawk_ext.awk" -f "$mydir/makesure.awk" Makesurefile "$@"
fi

